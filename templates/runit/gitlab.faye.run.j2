#

APP_ROOT={{ gitlab_web_base_dir.path }}
APP_USER={{ gitlab_git_user.name }}
APP_GROUP={{ gitlab_deploy_user.name }}
APP_RAILS_ENV='{{ gitlab_env }}'

export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8
export HOME=/tmp

CMD="bundle exec thin -C config/private_pub_thin.yml start -e ${APP_RAILS_ENV}"

# Set ENV
export RAILS_ENV=$APP_RAILS_ENV
export PATH={{ rbenv_root }}/bin:$PATH

cd $APP_ROOT/current

# Run
exec 2>&1
echo "Running faye gitlab_shell..."
exec chpst -u "${APP_USER}:${APP_GROUP}" $CMD
